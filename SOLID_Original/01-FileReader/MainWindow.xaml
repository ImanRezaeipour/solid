<Window x:Class="_01_FileReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="10px" Grid.Row="0">
            <TextBox IsReadOnly="True" Width="200px" Margin="0,0,5px,0" Name="textFileUri"></TextBox>
            <Button Content="Browse..." Name="browseButton" Click="BrowseButton_OnClick"></Button>
        </StackPanel>

        <TextBox IsReadOnly="True" Grid.Row="1" Name="textFileContent"></TextBox>

    </Grid>
</Window>
